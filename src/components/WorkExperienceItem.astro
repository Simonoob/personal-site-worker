---
// Props: logo (string, required), company (string, required), title (string, required), start (string, required), end (string, required)
const { logo, company, title, start, end } = Astro.props
---

<div class="work-item">
	<div class="logo-and-title">
		<div class="work-logo">
			<img
				src={logo.src}
				alt={company + ' logo'}
				width="100%"
				height="100%"
			/>
		</div>
		<div class="work-info">
			<div class="work-company">{company}</div>
			<div class="work-title">{title}</div>
		</div>
	</div>
	<div class="work-dates">
		<span>{start}</span>
		<span class="work-dash">â€“</span>
		<span>{end}</span>
	</div>
</div>

<style>
	.work-item {
		display: flex;
		flex-direction: column;
		width: 100%;
		gap: var(--space-2xs);
	}
	.work-logo {
		width: var(--grid-gutter);
		height: var(--grid-gutter);
		overflow: hidden;
	}
	.logo-and-title {
		display: flex;
		gap: var(--space-m);
		align-items: center;
		justify-content: center;
		flex-shrink: 0;
	}
	.work-logo img {
		object-fit: contain;
		display: block;
	}
	.work-info {
		display: flex;
		flex-direction: column;
		justify-content: center;
		flex: 1;
	}
	.work-company {
		font-weight: 700;
		font-size: var(--font-step-1);
	}
	.work-title {
		font-size: var(--font-step--1);
	}
	.work-dates {
		display: flex;
		align-items: center;
		gap: var(--space-xs);
		font-size: var(--font-step--1);
		color: var(--text-muted);
		white-space: nowrap;
	}
</style>
